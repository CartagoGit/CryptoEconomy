{
	"name": "cryptoeconomy",
	"version": "0.0.1",
	"description": "App para contabilizar cryptomonedas y poder hacer calculo e informe de compras y ventas, ganancias, perdidas, beneficios , y comparar sus cambios",
	"private": true,
	"author": "Cartago",
	"license": "MIT",
	"repository": "https://github.com/CartagoGit/CryptoEconomy.git",
	"main": "./public/electron.js",
	"homepage": "./",
	"dependencies": {
		"@apollo/client": "^3.5.6",
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/react": "^12.1.2",
		"@testing-library/user-event": "^13.5.0",
		"@types/lowdb": "^1.0.11",
		"@types/react-router-dom": "^5.3.2",
		"electron-alert": "^0.1.20",
		"electron-devtools-installer": "^3.2.0",
		"electron-is-dev": "^2.0.0",
		"eslint-config-react-app": "^7.0.0",
		"express": "^4.17.2",
		"graphql": "^16.2.0",
		"json-server": "^0.17.0",
		"lowdb": "^3.0.0",
		"moment": "^2.29.1",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.15",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.6",
		"react-router-dom": "^6.2.1",
		"react-scripts": "^5.0.0",
		"redux": "^4.1.2",
		"redux-thunk": "^2.4.1",
		"sass": "1.45.2",
		"sweetalert2": "11.3.3",
		"thunk": "^0.0.1",
		"uuid": "^8.3.2",
		"web-vitals": "^2.1.2"
	},
	"devDependencies": {
		"@types/node": "17.0.7",
		"concurrently": "^6.5.1",
		"cross-env": "^7.0.3",
		"electron": "^16.0.5",
		"electron-builder": "22.14.12",
		"electronmon": "^2.0.2",
		"wait-on": "^6.0.0"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"server-lowdb": "nodemon  src/server/server.mjs",
		"dev": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn:electron\"",
		"electron": "wait-on tcp:3000 && electron .",
		"electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
		"electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js",
		"electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js",
		"unpackage": "yarn build && electron-builder --dir"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			"last 1 electron version"
		],
		"development": [
			"last 1 electron version"
		]
	},
	"build": {
		"appId": "com.electron.cryptoeconomy",
		"productName": "CryptoEconomy",
		"compression": "store",
		"files": [
			"build/**/*",
			"node_modules/**/*"
		],
		"directories": {
			"buildResources": "public"
		},
		"extraResources": [
			{
				"from": "assets/",
				"to": "assets/",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "server/",
				"to": "server/",
				"filter": [
					"**/*"
				]
			}
		],
		"win": {
			"target": [
				"nsis",
				"portable"
			]
		},
		"nsis": {
			"unicode": false,
			"artifactName": "${productName}Installer${version}.${ext}"
		},
		"portable": {
			"unicode": false,
			"artifactName": "${productName}Portable${version}.${ext}"
		},
		"linux": {
			"target": "deb"
		},
		"mac": {
			"target": "dmg"
		}
	},
	"browser": {
		"http": false,
		"https": false,
		"net": false,
		"path": false,
		"stream": false,
		"tls": false
	}
}
